<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.laessker.jonathan.airhockey">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/johgirotheme">
        <activity android:name=".HauptMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".data.BackgroundMusicService"
            android:enabled="true" />
        <service
            android:name=".data.soundEffectsService"
            android:enabled="true" />

        <activity android:name=".SettingsMenu" />
        <activity android:name=".Statistics" />
        <activity android:name=".SinglePlayerPreGame" />
        <activity android:name=".PauseMenu" />
        <activity android:name=".HighScore" />
        <activity android:name=".PlayerWinActivity" />
        <activity android:name=".AirHockeyActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".GameFinished"></activity>
    </application>

</manifest>