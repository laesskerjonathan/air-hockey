<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.laessker.jonathan.airhockey">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/johgirotheme">
        <activity android:name=".HauptMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".data.BackgroundMusicService"
            android:enabled="true" />
        <service
            android:name=".data.soundEffectsService"
            android:enabled="true" />

        <activity android:name=".SettingsMenu"
            android:screenOrientation="portrait"/>
        <activity android:name=".Statistics"
            android:screenOrientation="portrait"/>
        <activity android:name=".PreGame"
            android:screenOrientation="portrait"/>
        <activity android:name=".PauseMenu"
            android:screenOrientation="portrait"/>
        <activity android:name=".HighScore"
            android:screenOrientation="portrait"/>
        <activity android:name=".PlayerWinActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".AirHockeyActivity"
            android:screenOrientation="portrait"/>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".GameFinished"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>